<tr>
    <td>
        <%= post.id %>
    </td>
    <td>
        <%= post.date %>
    </td>
    <td>
        <%= post.user.full_name %>
    </td>
    <td>
        <%= truncate(post.rationale) %>
    </td>
    <td>
        <%= link_to edit_post_path(post), class: "mr-3", id: "edit_#{post.id}" do %>
            <i class="fa fa-pencil-square-o text-info fa-2x"></i>
        <% end %>
    </td>
</tr>